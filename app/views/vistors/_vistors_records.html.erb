<tr>
    <td width="10" align="center">
        <i class="fa fa-2x fa-user fw"></i>
    </td>
    
    <td>
      <%= vistor.username %><br>
    </td>
    
    <td>
      <%= vistor.email %>
    </td>

    <td>
      <%= vistor.contact_number %>
    </td>

    <td>                              
        <%= vistor.created_at.localtime.strftime("%I:%M %p") %>
    </td>

    <td>
      <% if vistor.checkout_time.present? %>
        <%= vistor.checkout_time.localtime.strftime("%I:%M %p") %>
      <% else %>
        <%= link_to 'Sign out', signout_vistor_vistors_path(vistor_id: vistor.id) %>
      <% end %>
    </td>

</tr>