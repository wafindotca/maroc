<div class="row">   
    <div class="col-md-6">
        <h3 class="new-visitor"><%=  @vistors.count %> Vistors</h3>
    </div>

    <div class="col-md-4">
        <div class="form-group">
          <input type="text" class="search-query form-control form-class search-icon" id="search-query" placeholder="&#xF002; Search visitors">
        </div>
    </div>

    <div class="col-md-2 search-visitor">
      <%= link_to 'New Vistor', new_vistor_path, :class => 'btn btn-sign' %>
    </div>  

  </div>

  <div class="row">

    <div class="col-md-6 search_by_date_form">
        <button type="button" class="btn arrow-btn yesterday_record_button"><i class="fa fa-chevron-left" aria-hidden="true"></i></button>
        <%= hidden_field_tag :search_by_yesterday, @yesterday, 'data-behaviour' => 'datepicker'%>
        <%= text_field_tag :search_by_calender, @today.strftime('%a, %d %b %Y'), class: "btn arrow-btn", 'data-behaviour' => 'datepicker'%>
        <button type="button" class="btn arrow-btn tomorrow_record_button"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
        <%= hidden_field_tag :search_by_tomorrow, @tomorrow, 'data-behaviour' => 'datepicker'%>
    </div>
    
    <div class="col-md-4">
      <%= select_tag('search_by_user_type', options_for_select(["Currently Signed In", "Currently Signed Out"]),prompt: "All Visitors", class: 'form-control search_by_user_type', id: 'search_by_user_type') %>
    </div>
    
    <div class="col-md-1">
      <%= link_to 'Export', generate_reports_vistors_path(format: :csv, date: @today), :class => 'btn btn-sign' %>
    </div>
  
  </div>

<br>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th class="table_heading">NAME</th>
      <th class="table_heading">EMAIL</th>
      <th class="table_heading">CONTACT NO</th>
      <th class="table_heading">SIGN IN</th>
      <th class="table_heading">SIGN OUT</th>
    </tr>
  </thead>
  <tbody class="vistor_record">
    <%= render :partial => 'vistors_records',collection: @vistors, as: :vistor %>
  </tbody>
</table>
<div class="row">
    <div class="col-md-3">
        <h5 class=""><%=  @vistors.count %> Vistors
          <%= link_to 'Export', generate_reports_vistors_path(format: :csv, date: @today), :class => 'export-link' %>
        </h5> 
    </div>
  </div>