<p id="notice"><%= notice %></p>
<script src="https://use.fontawesome.com/1e803d693b.js"></script>

<div class="container">
  <div class="row">
        <div class="panel panel-default user_panel">
            <div class="panel-heading">
                <h3 class="panel-title">Vistors</h3>
            </div>
            <div class="panel-body">
        <div class="table-container">
                    <table class="table-users table" border="0">
                        <tbody> 
                            <th>Image</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Contact Number</th>
                            <th>Checked In</th>
                            <th>User Name</th>
                              <% @vistors.each do |vistor| %>
                              <tr>
                                <td width="10" align="center">
                                    <i class="fa fa-2x fa-user fw"></i>
                                </td>
                                <td>
                                    <%= vistor.username %><br>
                                </td>
                                <td>
                                    <%= vistor.email %>
                                </td>

                                <td>
                                    <%= vistor.contact_number %>
                                </td>
                                <td>
                                    <%= time_ago_in_words(vistor.created_at) %> ago
                                </td>
                               <td><%= link_to 'Checkout', vistor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            
                                
                              </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

  </div>
  <%= link_to 'New Vistor? Check In', new_vistor_path %>
  <br>
  <%= link_to 'Home', welcome_index_path %>
</div>


<style type="text/css">
  i {  vertical-align: middle; }
.table-users tbody tr:hover {
  cursor: pointer;
  background-color: #eee;
}
.nav-user-photo {
     vertical-align: middle;
}
.user_panel {
    width: 100%;
}
</style>